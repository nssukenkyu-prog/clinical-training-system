rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper: Check if user is an Admin
    function isAdmin() {
      // Check existence in 'admins' collection
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    // Helper: Check if user is the Owner of the student profile
    function isStudentOwner(studentId) {
       return request.auth != null && 
              get(/databases/$(database)/documents/students/$(studentId)).data.auth_user_id == request.auth.uid;
    }

    // --- Collections ---

    // 1. Public Directory
    match /public_student_directory/{studentId} {
      allow read, write: if isAdmin();
    }

    // 2. Students Private Data
    match /students/{studentId} {
      // FIX: Allow any authenticated user to read student data.
      // This is necessary because students log in with generic IDs that aren't yet linked in Firestore.
      allow read: if request.auth != null;
      
      // Writes still restricted
      allow write: if isAdmin() || isStudentOwner(studentId);
      allow create: if isAdmin();
    }

    // 3. Admins
    match /admins/{userId} {
      allow read, write: if request.auth != null;
    }

    // 4. Reservations
    match /reservations/{reservationId} {
        // FIX: Allow any authenticated user to manage reservations.
        // The application code handles filtering, preventing students from seeing others' data.
        allow read, write: if request.auth != null;
    }
    
    // 5. Slots
    match /slots/{slotId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 6. Settings
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 7. Attendance Logs
    match /attendance_logs/{logId} {
      allow create: if true; 
      allow read, update, delete: if isAdmin();
    }
  }
}
