rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper: Check if user is an Admin
    function isAdmin() {
      // Check existence in 'admins' collection
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    // Helper: Check if user is the Owner of the student profile
    function isStudentOwner(studentId) {
       return request.auth != null && 
              get(/databases/$(database)/documents/students/$(studentId)).data.auth_user_id == request.auth.uid;
    }

    // --- Collections ---

    // 1. Public Directory: Admin clean-up allowed
    match /public_student_directory/{studentId} {
      allow read, write: if isAdmin();
    }

    // 2. Students Private Data
    match /students/{studentId} {
      allow read, write: if isAdmin() || isStudentOwner(studentId);
      allow create: if isAdmin();
    }

    // 3. Admins: SECURED
    // CRITICAL FIX: Prevent generic users from writing here to become admins.
    // Writes must be done via Firebase Console or by an existing Admin.
    match /admins/{userId} {
      allow read: if request.auth != null;
      allow write: if isAdmin(); 
    }

    // 4. Reservations
    match /reservations/{reservationId} {
        allow read, write: if isAdmin() || (
            request.auth != null &&
            get(/databases/$(database)/documents/students/$(resource.data.student_id)).data.auth_user_id == request.auth.uid
        );
        
        allow create: if isAdmin() || (
            request.auth != null &&
            get(/databases/$(database)/documents/students/$(request.resource.data.student_id)).data.auth_user_id == request.auth.uid
        );
    }
    
    // 5. Slots
    match /slots/{slotId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (
        request.auth != null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['availability_cache'])
      );
    }

    // 6. Settings
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 7. Attendance Logs
    match /attendance_logs/{logId} {
      allow create: if true; 
      allow read, update, delete: if isAdmin();
    }
  }
}
