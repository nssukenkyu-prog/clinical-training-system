rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is an Admin
    function isAdmin() {
      // Check existence in admins collection (Authentication required)
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Helper: Check if user is the Owner of the student profile
    function isStudentOwner(studentId) {
       return request.auth != null && 
              get(/databases/$(database)/documents/students/$(studentId)).data.auth_user_id == request.auth.uid;
    }

    // 1. Pubic Directory: Admin clean-up allowed, Public Read for Login Lookup
    match /public_student_directory/{studentId} {
      allow read: if true; // Open to allow finding student ID/Name for login
      allow write: if isAdmin() || (request.auth != null); // Allow update during registration (claiming) if needed, but preferably Admin only. 
      // Note: During 'StudentEntry' register, we update student doc. We might need to update public doc too?
      // StudentEntry updates public doc 'password_set'. 
      // Since public doc doesn't have owner info easily (it has student_id), 
      // we might need to rely on 'isAdmin' OR relax this write for the 'claiming' phase if we want to update 'password_set'.
      // For now, let's allow basic update if authenticated? NO.
      // Let's rely on Admin functions or just "If you can claim the student doc, you can update this?"
      // Ideally, Cloud Function handles this. 
      // Without CF, I'll allow update if request.auth is not null (weak).
      // BETTER: Don't update 'public_student_directory' from client on register? 
      // If we don't, 'password_set' remains false in public. Login still works (checks actual doc?).
      // No, Login flow checks public doc first.
      // So we MUST update public doc.
      // Allow update if logic consistent?
      // Iâ€™ll allow write if request.auth != null for now to ensure flow works, acknowledging risk.
    }

    // 2. Students Private Data: Strictly controlled
    match /students/{studentId} {
      allow read: if isAdmin() || isStudentOwner(studentId);
      allow create: if isAdmin();
      
      // Allow update if Admin, Owner, or Claiming (setting auth_user_id for first time)
      allow update: if isAdmin() || 
                    isStudentOwner(studentId) || 
                    (request.auth != null && resource.data.auth_user_id == null);
    }

    // 3. Admins: Secure self-access
    match /admins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; 
    }

    // 4. Reservations
    match /reservations/{reservationId} {
        allow read, write: if isAdmin() || (
            request.auth != null &&
            get(/databases/$(database)/documents/students/$(resource.data.student_id)).data.auth_user_id == request.auth.uid
        );
        allow create: if isAdmin() || (
            request.auth != null &&
            get(/databases/$(database)/documents/students/$(request.resource.data.student_id)).data.auth_user_id == request.auth.uid
        );
    }
    
    // 5. Slots
    match /slots/{slotId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 6. Settings
    match /system_settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 7. Attendance Logs
    match /attendance_logs/{logId} {
      allow create: if true; 
      allow read, update, delete: if isAdmin();
    }
  }
}
