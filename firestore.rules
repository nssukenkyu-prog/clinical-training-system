rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is an Admin
    function isAdmin() {
      // Admin document must use UID as key (migrated)
      // and checking existence is sufficient if we trust the admins collection is secure (it is write-protected)
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Helper: Check if user is the Owner of the student profile
    // We fetch the student doc to verify 'auth_user_id' matches requester
    function isStudentOwner(studentId) {
       return request.auth != null && 
              get(/databases/$(database)/documents/students/$(studentId)).data.auth_user_id == request.auth.uid;
    }

    // --- Collections ---

    // 1. Public Directory: Admin clean-up allowed
    match /public_student_directory/{studentId} {
      allow read, write: if isAdmin();
    }

    // 2. Students Private Data
    match /students/{studentId} {
      allow read: if isAdmin() || isStudentOwner(studentId) || resource.data.email == request.auth.token.email;
      allow write: if isAdmin() || isStudentOwner(studentId);
      allow create: if isAdmin();
    }

    // 3. Admins: Emergency Access to fix profile
    match /admins/{userId} {
      allow read, write: if request.auth != null;
    }

    // 4. Reservations: Protecting schedule privacy
    match /reservations/{reservationId} {
        allow read, write: if isAdmin() || (
            request.auth != null && (
                get(/databases/$(database)/documents/students/$(resource.data.student_id)).data.auth_user_id == request.auth.uid ||
                get(/databases/$(database)/documents/students/$(resource.data.student_id)).data.email == request.auth.token.email
            )
        );
        
        allow create: if isAdmin() || (
            request.auth != null && (
                get(/databases/$(database)/documents/students/$(request.resource.data.student_id)).data.auth_user_id == request.auth.uid ||
                get(/databases/$(database)/documents/students/$(request.resource.data.student_id)).data.email == request.auth.token.email
            )
        );
    }
    
    // 5. Slots: Public Read (Calendar), Admin Write
    match /slots/{slotId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 6. Settings: Public Read (Config), Admin Write
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 7. Attendance Logs: Kiosk writes here
    match /attendance_logs/{logId} {
      // Allow create by anyone (Kiosk requirement if unauthenticated)
      // Rate limiting or validation should ideally happen via Functions, but for Rules:
      allow create: if true; 
      allow read, update, delete: if isAdmin();
    }
  }
}
